= simple_form_for @message, :html => { :class => 'form-horizontal' } do |f|
  = f.input :campaign_id
  = f.input :text
  = f.input :messageble_id
  = f.input :messageble_type
  = f.input :status
  = f.input :request
  = f.input :response
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), messages_path, :class => 'btn'
